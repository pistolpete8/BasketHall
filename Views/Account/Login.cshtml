@using KosSala.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";

    Layout = null;
}@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<head>
    <link href="~/Content/Login/style.css" rel="stylesheet">
     <link href="~/Content/Login/bootstrap.min.css" rel="stylesheet">
</head>


<div class="container-fluid">
    <div class="row no-gutter">
        <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
        
        <div class="col-md-8 col-lg-6">
            <div class="login d-flex align-items-center py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-md-9 col-lg-8 mx-auto">
                            <h3 class="login-heading mb-4">Dobrodošao nazad!</h3>

                            <section id="loginForm">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <h2>Prijavljivanje</h2>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label login-heading mb-4" })
                                    <div class=" form-group form-label-group">

                                        <div class="  col-md-10 ">
                                            <!-- form-group form-label-group -->
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address", autocomplete="off"})
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <label class = "col-md-2 control-label login-heading mb-4"> Lozinka </label>
                                    
                                    <div class=" form-group form-label-group">
                                        <label> Lozinka </label>

                                        <div class=" col-md-10 ">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox mb-3">
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.RememberMe)
                                                @Html.LabelFor(m => m.RememberMe)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Prijavi se" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold    " />

                                        </div>
                                    </div>
                                    <p class="col-md-2 control-label login-heading mb-4">
                                        @Html.ActionLink("Registracija", "Register", routeValues: null, htmlAttributes: new { @class = "  font-weight-light btn btn-lg btn-primary text-center  " })


                                    </p>
                                    <p class="col-md-2 control-label  mb-4">
                                        @Html.ActionLink("Početna", "Index", "Home", routeValues: null, htmlAttributes: new { @class = " font-weight-light btn btn-lg btn-primary text-center  " })

                                    </p>




                                }
                            </section>


                        </div>

                    </div>
                   
                </div>
            </div>
            
        </div>
    </div>
</div>


