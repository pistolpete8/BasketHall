
@model KosSala.Models.RegisterViewModel
@{
    ViewBag.Title = "Log in";

    Layout = null;
}@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<head>
    <link href="~/Content/Login/style1.css" rel="stylesheet">
    <link href="~/Content/Login/bootstrap.min.css" rel="stylesheet">
</head>


<div class="container-fluid">
    <div class="row no-gutter">
        <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>

        <div class="col-md-8 col-lg-6">
            <div class="login d-flex align-items-center py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-md-9 col-lg-8 mx-auto">
                            <h3 class="login-heading mb-4">Napravi novi nalog!</h3>

                            <section id="loginForm">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <h4>REGISTRACIJA</h4>
                                    <hr />

                                    @Html.ValidationSummary("", new { @class = "text-danger" })

                                    @Html.LabelFor(m => m.UserName, new { @class = " control-label login-heading mb-4 no-gutter" })


                                    <div class="form-group form-label-group">
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "UserName", autocomplete= "off"})
                                        </div>
                                    </div>
                                    @Html.LabelFor(m => m.Ime, new { @class = "col-md-2 control-label login-heading mb-4" })
                                    <div class="form-group form-label-group">
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Ime, new { @class = "form-control", placeholder = "Ime", autocomplete= "off" })
                                        </div>
                                    </div>


                                    @Html.LabelFor(m => m.Prezime, new { @class = "col-md-2 control-label login-heading mb-4" })
                                    <div class="form-group form-label-group">



                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Prezime, new { @class = "form-control", placeholder = "Prezime", autocomplete= "off" })
                                        </div>
                                    </div>
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label login-heading mb-4" })

                                    <div class="form-group form-label-group">


                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address", autocomplete= "off" })
                                        </div>
                                    </div>
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label login-heading mb-4" })

                                    <div class="form-group form-label-group">


                                        <div class="col-md-10">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                        </div>
                                    </div>
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label login-heading mb-4 " })
                                    <div class="form-group form-label-group">



                                        <div class="col-md-10">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "ConfirmPassword" })
                                        </div>
                                    </div>
                                    <div class="linija">

                                    </div>
                                    <label class="login-heading mb-4">Odabir tipa korisnika</label>
                                    <div class="col-md-10 row align-items-center justify-content-center  ">
                                        <div class="linija">
                                            Korisnik
                                            @Html.RadioButtonFor(model => model.tipRegistracije, "1", new { @class = "form-control radio-inline" })
                                        </div>

                                        <div class="linija">
                                            Upravnik sale
                                            @Html.RadioButtonFor(model => model.tipRegistracije, "2", new { @class = "form-control radio-inline" })
                                        </div>

                                        @*<div class="linija">
                                            Administrator
                                            @Html.RadioButtonFor(model => model.tipRegistracije, "3", new { @class = "form-control radio-inline" })
                                        </div>*@


                                    </div>
                                    <div> <hr /></div>
                                    <div class="form-group form-label-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold" value="Registruj se" />
                                        </div>
                                        <p class="col-md-2 control-label  mb-4" style="padding-top:20px;">
                                            @Html.ActionLink("Početna", "Index", "Home", routeValues: null, htmlAttributes: new { @class = " font-weight-light btn btn-lg btn-primary text-center  " })

                                        </p>


                                    </div>

                                }

                            </section>


                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .linija {
        padding-left: 50px
    }
</style>


