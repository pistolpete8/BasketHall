<body>
    <div class="container">
        <div class="card border-0 shadow my-5">
            <div class="card-body p-5">


                




                <div id="carousel-example-2" class="carousel slide carousel-fade" data-ride="carousel">
                    <!--Indicators-->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-2" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-2" data-slide-to="1"></li>
                        <li data-target="#carousel-example-2" data-slide-to="2"></li>
                    </ol>
                    <!--/.Indicators-->
                    <!--Slides-->
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <div class="view">
                                <img class="d-block w-100" src="~/Content/carousel/players.jpg"
                                     alt="First slide">
                                <div class="mask rgba-black-light"></div>
                            </div>
                            <div class="carousel-caption">

                                @Html.ActionLink("IGRAČI", "Index", "Korisnik", new { @class = "btn btn-primary h3-responsive " })
                            </div>
                        </div>
                        <div class="carousel-item">
                            <!--Mask color-->
                            <div class="view">
                                <img class="d-block w-100" src="~/Content/carousel/termin.jpg"
                                     alt="Second slide">
                                <div class="mask rgba-black-strong"></div>
                            </div>
                            <div class="carousel-caption">

                                @Html.ActionLink("TERMINI", "Termini", "Korisnik", new { @class = "btn btn-primary h3-responsive" })
                            </div>
                        </div>
                        <div class="carousel-item">
                            <!--Mask color-->
                            <div class="view">
                                <img class="d-block w-100" src="~/Content/carousel/sale.jpg"
                                     alt="Third slide">
                                <div class="mask rgba-black-slight"></div>
                            </div>
                            <div class="carousel-caption">

                                @Html.ActionLink("SALE", "DostupneSale", "Korisnik", new { @class = "btn btn-primary h3-responsive" })
                            </div>
                        </div>
                    </div>
                    <!--/.Slides-->
                    <!--Controls-->
                    <a class="carousel-control-prev" href="#carousel-example-2" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-2" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <!--/.Controls-->
                </div>









              
                                <div class="row">
                                    <div class="col-md-12">
                                        <h3 style="padding-top:30px;">Statistika proseka</h3>
                                        <hr>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12 rating-part-left text-center">
                                       
                                        <h1>
                                            @Model.prosecanRejting
                                        </h1>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <p>Prosečan rejting</p>
                                    </div>
                                    <div class="col-md-8 col-sm-8 col-xs-12">

                                        <div class="progress-bar-section">
                                            @{ 
                                                int broj = Model.brojeviPoOcenama[1];
                                                int ukupno = Model.brojeviPoOcenama[0];
                                                int procenat = (broj * 100) / ukupno;
                                            }
                                            <p>@procenat%</p>
                                            <div class="progress progress-bar-vertical">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="height: @procenat%;"></div>
                                            </div>
                                            <i class="fa fa-star" aria-hidden="true"></i><br>
                                            <span>5</span>
                                        </div>

                                        <div class="progress-bar-section">
                                            @{
                                                 broj = Model.brojeviPoOcenama[2];
                                                 ukupno = Model.brojeviPoOcenama[0];
                                                 procenat = (broj * 100) / ukupno;
                                            }
                                            <p>@procenat%</p>
                                            <div class="progress progress-bar-vertical">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="height: @procenat%;"></div>
                                            </div>
                                            <i class="fa fa-star" aria-hidden="true"></i><br>
                                            <span>4</span>
                                        </div>

                                        <div class="progress-bar-section">
                                            @{
                                                broj = Model.brojeviPoOcenama[3];
                                                ukupno = Model.brojeviPoOcenama[0];
                                                procenat = (broj * 100) / ukupno;
                                            }
                                            <p>@procenat%</p>
                                            <div class="progress progress-bar-vertical">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="height: @procenat%;"></div>
                                            </div>
                                            <i class="fa fa-star" aria-hidden="true"></i><br>
                                            <span>3</span>
                                        </div>

                                        <div class="progress-bar-section">
                                            @{
                                                broj = Model.brojeviPoOcenama[4];
                                                ukupno = Model.brojeviPoOcenama[0];
                                                procenat = (broj * 100) / ukupno;
                                            }
                                            <p>@procenat%</p>
                                            <div class="progress progress-bar-vertical">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="height: @procenat%;"></div>
                                            </div>
                                            <i class="fa fa-star" aria-hidden="true"></i><br>
                                            <span>2</span>
                                        </div>

                                        <div class="progress-bar-section">
                                            @{
                                                broj = Model.brojeviPoOcenama[5];
                                                ukupno = Model.brojeviPoOcenama[0];
                                                procenat = (broj * 100) / ukupno;
                                            }
                                            <p>@procenat%</p>
                                            <div class="progress progress-bar-vertical">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="height: @procenat%;"></div>
                                            </div>
                                            <i class="fa fa-star" aria-hidden="true"></i><br>
                                            <span>1</span>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <hr>
                                    <h3>TOP 5 IGRAČA</h3>
                                    <hr>
                                </div>
                                @{
